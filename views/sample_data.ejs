<!doctype html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title></title>
    </head>
    <body>
        <div class="container">            
            <% if(action == 'add') { %>

                <div class="card">
                    <div class="card-body">
                        <form method="POST" action="/sample_data/add_sample_data">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Complete Name</label>
                                        <input type="text" id="complete_name" name="complete_name" required> <br> <br>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Telephone Number (10 Digits)</label>
                                        <input type="number" id="phone" name="phone" minlength="10" maxlength="10" required> <br> <br>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>e-mail</label>
                                        <input type="email" id="email" name="email" required> <br> <br>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Appointment Day</label>
                                        <input type="date" id="day" name="day" required> <br> <br>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label>Appointment Hour</label>
                                        <input type="time" id ="time" name = "time" min="10:00" max="18:00" required> <br>
                                    </div>
                                </div>
                            </div>
                            <div class="mb-3">
                                <input type="submit" name="submit_button" class="btn btn-primary" value="Send Request" />
                            </div>
                        </form>
                    </div>
                </div>

            <% } else { %>
                
            
                    <h1>Your Submission has been successfully sent</h1>
                    <h2>Wait until our team members contact you.</h2>
                
            

            <% } %>

        </div> 

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>